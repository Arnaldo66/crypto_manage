<!DOCTYPE html>
<html lang="en">
  <head>
      <!--- script google --->
      {{ include('Include/google-webmastertool.html.twig') }}

      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">

      <title>{{ 'general_title'|trans }}</title>

      {% block stylesheets %}
            {{ encore_entry_link_tags('landing') }}
      {% endblock %}

      <link rel="icon" type="image/x-icon" href="{{ asset('/images/favicon.ico') }}" />

      <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
      <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->

  </head>
  <body id="page-top">

    {{ include('Include/landing-page-menu.html.twig') }}

    <div id="inSlider" class="carousel carousel-fade" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>{{ 'lp_title'|trans|raw }}</h1>
                        <p>
                            <a class="btn btn-lg btn-primary" href="{{ path('article_show', {'slug': 'a-propos' }) }}" role="button">{{ 'know_more'|trans }}</a>
                        </p>
                    </div>
                </div>
                <!-- Set background for slide in css -->
                <div class="header-back one"></div>
            </div>
        </div>
    </div>

    <section id="features" class="container features">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="navy-line"></div>
                <h1>{{ 'lp_feature_general_title'|trans|raw }}</h1>
                <p>{{ 'lp_feature_general_text'|trans }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 text-center wow fadeInLeft">
                <div>
                    <i class="fa fa-mobile features-icon"></i>
                    <h2>{{ 'lp_feature_actual_course_title'|trans }}</h2>
                    <p>{{ 'lp_feature_actual_course_text'|trans }}</p>
                    <a href="{{ path('dashboard')}}" class="btn btn-primary">{{ 'lp_feature_actual_course_info'|trans }}</a>
                </div>
            </div>
            <div class="col-md-6 text-center  wow zoomIn">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>{{ 'lp_feature_actual_course_info'|trans }}</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped text-left">
                            <thead>
                              <tr>
                                  <th>#</th>
                                  <th>{{ 'crypto'|trans }}</th>
                                  <th>{{ 'value'|trans }}</th>
                                  <th>{{ 'change'|trans }}</th>
                              </tr>
                            </thead>
                            <tbody>
                              {% for currency in currencies %}
                                {% set change_value = 0 %}
                                {% if currency.currencyValueMoment is not null %}
                                  {% set change_value = currency.currencyValueMoment.percentChange24h %}
                                {% endif %}
                                <tr>
                                  <td>{% if currency.image is not null %}<img src="{{ asset('images/coin-logo/thumb/' ~ currency.image ) }}">{% endif %}</td>
                                  <td><a href="{{ path('currency_show', {'slug': currency.slug }) }}">{{ currency.name }}</a></td>
                                  <td>â‚¬ {{ currency.priceEur|price }}</td>
                                  <td>{{ change_value|value_percent|raw  }} </div></td>
                                </tr>
                              {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="text-right widget-home-bottom">
                  <a href="{{ path('dashboard')}}" class="italic-link">{{ 'see_course'|trans }}</a>
                </div>
            </div>
            <div class="col-md-3 text-center wow fadeInRight">
                <div class="m-t-lg">
                    <i class="fa fa-bar-chart features-icon"></i>
                    <h2>{{ 'lp_feature_simulator_title'|trans }}</h2>
                    <p>{{ 'lp_feature_simulator_text'|trans }}</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="navy-line"></div>
                <h1>{{ 'lp_feature_trading_test_title'|trans }}</h1>
                <p>{{ 'lp_feature_trading_test_text'|trans|raw }}</p>
            </div>
        </div>
        <div class="row features-block">
            <div class="col-lg-6 features-text wow fadeInLeft">
                <small>{{ 'lp_feature_learn_title'|trans }}</small>
                <p>{{ 'lp_feature_learn_text'|trans }}</p>
                <a href="{{ path('trade_public')}}" class="btn btn-primary">{{ 'lp_btn_see_wallet'|trans }}</a>
            </div>
            <div class="col-lg-6 features-text wow fadeInLeft">
                <small>{{ 'lp_feature_my_crypto_title'|trans }}</small>
                <p>
                  {{ 'lp_feature_my_crypto_text'|trans }}
                  <br/><br/>
                </p>
                <a href="{{ path('my_crypto_dashboard')}}" class="btn btn-primary">{{ 'lp_feature_my_crypto_btn'|trans }}</a>
            </div>
        </div>
    </section>

    <section id="team" class="gray-section team">
        <div class="container">
            <div class="row m-b-lg">
                <div class="col-lg-12 text-center">
                    <div class="navy-line"></div>
                    <h1>{{ 'lp_team'|trans }}</h1>
                    <p>
                      {{ 'lp_team_response'|trans|raw }}<br/>
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center m-t-lg m-b-lg">
                    <p>{{ 'lp_team_info'|trans }}</p>
                </div>
            </div>
        </div>
    </section>

    <section class="features">
        <div class="container hidden-xs">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="navy-line"></div>
                    <h1>{{ 'lp_feature_help_us_title'|trans }}</h1>
                    <p>{{ 'lp_feature_help_us_text'|trans|raw }}</p>
                </div>
            </div>
            <div class="row">
                {{ include('Include/donation.html.twig') }}
            </div>
        </div>
    </section>

    <section id="contact" class="gray-section contact">
        <div class="container">
            <div class="row m-b-lg">
                <div class="col-lg-12 text-center">
                    <div class="navy-line"></div>
                    <h1>{{ 'contact_us'|trans }}</h1>
                    <p>{{ 'lp_contact_info'|trans }}</p>
                </div>
            </div>
            <div class="row m-b-lg">
                <div class="col-lg-3 col-lg-offset-3">
                    &nbsp;
                </div>
                <div class="col-lg-4">
                    <p class="text-color">
                        {{ 'lp_contact_impression'|trans }}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <a href="mailto:admin@e-goldenboy.com" class="btn btn-primary">{{ 'contact'|trans }}</a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center m-t-lg m-b-lg">
                    <p>
                      <strong>&copy; {{ "now"|date("Y") }} e-goldenboy.com</strong><br/>
                      {{ 'all_right_reserved'|trans }}
                    </p>
                </div>
            </div>
        </div>
    </section>

    {% block javascripts %}
      {{ encore_entry_script_tags('landing') }}
    {% endblock %}
  </body>
</html>

{% extends 'base.html.twig' %}

{% block title %}
  {% if dashboard == 0 %}
    <title>Liste de toutes les crypto-monnaies - e-goldenboy.com</title>
  {% else %}
    <title>Tableau de bord - e-goldenboy.com</title>
  {% endif %}
{% endblock title %}

{% block meta %}
  {% if dashboard == 0 %}
    <meta name="description" content="e-goldenboy.com liste toutes les crypto-monnaies existantes et affiche les cours en temps réel." />
  {% else %}
    <meta name="description" content="Tableau de bord du site e-goldenboy.com, liste des 100 premières crypto-monnaies(bitcoin, ethereum etc ...) selon leur capitalisation de marché." />
  {% endif %}
{% endblock meta %}

{% block body %}
  <div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Valeurs par défaut:
            </div>
            <div class="panel-body">
              <div class="col-lg-2">
                <label>Changement en %:
                  <select name="select-change" id="select-change" class="form-control input-sm" autocomplete="Off">
                    <option value="1">24h</option>
                    <option value="2">1h</option>
                    <option value="3">7J</option>
                  </select>
                </label>
              </div>
              <div class="col-lg-2">
                <label>Device:
                  <select name="select-currency-value" id="select-currency-value" class="form-control input-sm" autocomplete="Off">
                    <option value="1">Euro €</option>
                    <option value="2">Dollar $</option>
                    <option value="3">Bitcoin</option>
                  </select>
                </label>
              </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                {% if dashboard == 0 %}
                  Liste des toutes les crypto-monnaies classées par capitalisation boursière.
                {% else %}
                  Liste des {{ currencies|length }} premières crypto-monnaies classés par capitalisation boursière.
                  <a href="{{ path('currencies') }}" class="pull-right italic" title="Voir toutes les cryto-monnaies">Tout voir</a>
                {% endif %}
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                          <th>Logo</th>
                          <th>Nom</th>
                          <th>Symbole</th>
                          <th>Market cap</th>
                          <th>Changement</th>
                          <th>valeur</th>
                          <th>Rank</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for currency in currencies %}
                          <tr class="odd gradeX">
                            <td>{% if currency.image is not null %}<img src="{{ asset('images/currency-logo/32/' ~ currency.image ) }}">{% endif %}</td>
                            <td><a href="{{ path('currency_show', {'slug': currency.slug }) }}">{{ currency.name }}</a></td>
                            <td>{{ currency.symbol }}</td>
                            <td>{% if currency.currencyValueMoment is not null %}{{ currency.currencyValueMoment.marketCapUsd|price }} ${% endif %}</td>

                            {% set change_value_default = 0 %}
                            {% set change_value_one = 0 %}
                            {% set change_value_seven = 0 %}
                            {% if currency.currencyValueMoment is not null %}
                              {% set change_value_default = currency.currencyValueMoment.percentChange24h %}
                              {% set change_value_one = currency.currencyValueMoment.percentChange1h %}
                              {% set change_value_seven = currency.currencyValueMoment.percentChange7d %}
                            {% endif %}

                            {% if change_value_default > 0 %}
                              {% set div_class_default = "text-navy" %}
                              {% set level_default = "fa-level-up" %}
                            {% elseif change_value_default < 0 %}
                              {% set div_class_default = "text-danger" %}
                              {% set level_default = "fa-level-down" %}
                            {% else %}
                              {% set div_class_default = "text-success" %}
                              {% set level_default = "" %}
                            {% endif %}

                            {% if change_value_one > 0 %}
                              {% set div_class_one = "text-navy" %}
                              {% set level_one = "fa-level-up" %}
                            {% elseif change_value_one < 0 %}
                              {% set div_class_one = "text-danger" %}
                              {% set level_one = "fa-level-down" %}
                            {% else %}
                              {% set div_class_one = "text-success" %}
                              {% set level_one = "" %}
                            {% endif %}

                            {% if change_value_seven > 0 %}
                              {% set div_class_seven = "text-navy" %}
                              {% set level_seven = "fa-level-up" %}
                            {% elseif change_value_seven < 0 %}
                              {% set div_class_seven = "text-danger" %}
                              {% set level_seven = "fa-level-down" %}
                            {% else %}
                              {% set div_class_seven = "text-success" %}
                              {% set level_seven = "" %}
                            {% endif %}
                            <td class="font-bold">
                                <div id="percentage-change-1" class="{{ div_class_default }}"><i class="fa {{ level_default }}"></i> {{ change_value_default }} %</div>
                                <div id="percentage-change-2" class="{{ div_class_one }} hidden"><i class="fa {{ level_one }}"></i> {{ change_value_one }} %</div>
                                <div id="percentage-change-3" class="{{ div_class_seven }} hidden"><i class="fa {{ level_seven }}"></i> {{ change_value_seven }} %</div>
                            </td>

                            <td><span id="currency-value-1">{{ currency.priceEur|price }} €</span><span class="hidden" id="currency-value-2">{{ currency.priceUsd|price }} $</span><span class="hidden" id="currency-value-3">{{ currency.priceBtc|price }} <i class="fa fa-btc"></i></span></td>
                            <td>{{ currency.rank }}</td>
                          </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
      <!-- /.col-lg-12 -->
  </div>
{% endblock %}

{% block local_javascripts %}
  <script>
  $(document).ready(function() {
      var tableCurrencies = $('#dataTables-example').DataTable({
          responsive: true,
          "language":{
            "url": "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
          }
      });

      tableCurrencies.order([6,'asc']).draw();

      $('#select-currency-value').on('change',function(e){
        showElementById('currency-value-',this.value, 'span');
      });

      $('#select-change').on('change',function(e){
        showElementById('percentage-change-',this.value, 'div');
      });


      function showElementById(element, id, type){
        $( ""+type+"[id^='"+element+"']" ).addClass('hidden');
        $( ""+type+"#"+element+id ).removeClass('hidden');
      }

  });
  </script>
{% endblock %}

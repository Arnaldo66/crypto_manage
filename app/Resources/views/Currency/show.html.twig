{% extends "::base.html.twig" %}

{% block title %}
  <title>Cours du {{ currency.name }} - e-goldenboy.com</title>
{% endblock title %}

{% block meta %}
  <meta name="description" content="e-goldenboy.com vous informe sur le cours du {{ currency.name }} en temps réel. L'évolution et l'historique du {{ currency.name }} est exprimé sous forme graphique." />
{% endblock meta %}


{% block title_wrapper %}
  <h1 class="page-header">Cours du {{ currency.name }}</h1>
{% endblock title_wrapper %}

{% block body %}
  <div class="row">
    <div class="col-lg-12 panel panel-default" id="currency-panel-information">
      <div class="col-lg-5">
        <img src="{{ asset('/images/currency-logo/64/' ~ currency.image )}}" alt="{{ currency.name }}"/>
        <span>{{ currency.name }}</span>
      </div>
      <div class="col-lg-7">
        <p></p>
      </div>
    </div>
  </div>
  {% set moment_info = currency.CurrencyValueMoment %}
  <div class="row">
      <div class="panel-body">
          <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                  <thead>
                      <tr>
                          <th>Classement</th>
                          <th>Symbole</th>
                          <th>Prix en $</th>
                          <th>Prix en €</th>
                          <th>Pourcentage changement 1h</th>
                          <th>Pourcentage changement 24h</th>
                          <th>Pourcentage changement 7J</th>
                      </tr>
                  </thead>
                  <tbody>
                      <tr>
                          <td>{{ moment_info.rank }}</td>
                          <td>{{ currency.symbol }}</td>
                          <td>{{ moment_info.priceUsd }}</td>
                          <td>{{ moment_info.priceEur }}</td>
                          <td>{{ moment_info.percentChange1h }}</td>
                          <td>{{ moment_info.percentChange24h }}</td>
                          <td>{{ moment_info.percentChange7d }}</td>
                      </tr>
                  </tbody>
              </table>
          </div>
          <!-- /.table-responsive -->
      </div>
  </div>
{% endblock %}

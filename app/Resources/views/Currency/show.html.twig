{% extends "::base.html.twig" %}

{% block title %}
  <title>Cours du {{ currency.name }} - e-goldenboy.com</title>
{% endblock title %}

{% block meta %}
  <meta name="description" content="e-goldenboy.com vous informe sur le cours du {{ currency.name }} en temps réel. L'évolution et l'historique du {{ currency.name }} est exprimé sous forme graphique." />
{% endblock meta %}


{% block title_wrapper %}
  <h1 class="page-header">Cours du {{ currency.name }}</h1>
{% endblock title_wrapper %}

{% block body %}
  <div class="row">
    <div class="col-lg-12 panel panel-default" id="currency-panel-information">
      <div class="col-lg-5">
        <img src="{{ asset('/images/currency-logo/64/' ~ currency.image )}}" alt="{{ currency.name }}"/>
        <span>{{ currency.name }}</span>
      </div>
      <div class="col-lg-7">
        <p></p>
      </div>
    </div>
  </div>
  <div class="row">
      <div class="panel-body">
          <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                  <thead>
                      <tr>
                          <th>Classement</th>
                          <th>Symbole</th>
                          <th>Prix en $</th>
                          <th>Prix en €</th>
                          <th>Pourcentage changement 1h</th>
                          <th>Pourcentage changement 24h</th>
                          <th>Pourcentage changement 7J</th>
                      </tr>
                  </thead>
                  <tbody>
                      <tr>
                          <td>{{ currency.currencyValueMoment.rank }}</td>
                          <td>{{ currency.symbol }}</td>
                          <td>{{ currency.priceUsd|price }}</td>
                          <td>{{ currency.priceEur|price }}</td>
                          <td>{{ currency.currencyValueMoment.percentChange1h }}</td>
                          <td>{{ currency.currencyValueMoment.percentChange24h }}</td>
                          <td>{{ currency.currencyValueMoment.percentChange7d }}</td>
                      </tr>
                  </tbody>
              </table>
          </div>
          <!-- /.table-responsive -->
      </div>
  </div>

  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Evolution du cours du {{ currency.name }}
        <div class="pull-right">
          <div class="btn-group">
            <!---<button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">Actions
              <span class="caret"></span>
            </button>--->
            <ul class="dropdown-menu pull-right" role="menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
            </ul>
          </div>
        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div id="morris-area-chart"></div>
      </div>
      <!-- /.panel-body -->
    </div>
  </div>

{% endblock %}

{% block local_javascripts %}
  {% autoescape %}
    <script>
      $(function() {
          var json_data = {{ data|raw }};
          Morris.Area({
              element: 'morris-area-chart',
              data: json_data,
              xkey: 'period',
              ykeys: ['valeur'],
              labels: ['valeur'],
              pointSize: 1,
              hideHover: 'auto',
              resize: true
          });
      });
    </script>
  {% endautoescape %}
{% endblock %}

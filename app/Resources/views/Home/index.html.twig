{% extends 'base.html.twig' %}

{% block body %}
  <div class="row">
      <div class="col-lg-12">
          <div class="panel panel-default">
              <div class="panel-heading">
                  Liste des 200 premières crypto-monnaies classés par capitalisation boursière.
              </div>
              <!-- /.panel-heading -->
              <div class="panel-body">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                          <tr>
                            <th>Logo</th>
                            <th>Nom</th>
                            <th>Symbole</th>
                            <th>Valeur euro</th>
                            <th>Valeur dollars</th>
                            <th>Rank</th>
                          </tr>
                      </thead>
                      <tbody>
                          {% for currencyValue in currencyMomentValues %}
                            <tr class="odd gradeX">
                              <td>{% if currencyValue.currency.image is not null %}<img height="32" width"32" src="{{ asset('images/currency-logo/32/' ~ currencyValue.currency.image ) }}">{% endif %}</td>
                              <td><a href="{{ path('currency_show', {'slug': currencyValue.currency.slug }) }}">{{ currencyValue.currency.name }}</a></td>
                              <td>{{ currencyValue.currency.symbol }}</td>
                              <td>{{ currencyValue.priceEur|round(2, 'floor')}}</td>
                              <td>{{ currencyValue.priceUsd|round(2, 'floor') }}</td>
                              <td>{{ currencyValue.rank }}</td>
                            </tr>
                          {% endfor %}
                      </tbody>
                  </table>
              </div>
              <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
  </div>
{% endblock %}

{% block local_javascripts %}
  <script>
  $(document).ready(function() {
      $('#dataTables-example').DataTable({
          responsive: true,
          "ordering": false
      });
  });
  </script>
{% endblock %}

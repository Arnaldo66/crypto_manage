{% extends "::base.html.twig" %}

{% block title %}
  <title>Gestion des currencies - e-goldenboy.com</title>
{% endblock title %}

{% block title_wrapper %}
  <h2>Gestion des currencies</h2>
{% endblock title_wrapper %}

{% block body %}
  <div class="row">
      <div class="col-lg-12">
          <div class="panel panel-default">
              <!-- /.panel-heading -->
              <div class="panel-body">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="data-tables-currencies">
                      <thead>
                          <tr>
                            <th>Logo</th>
                            <th>id</th>
                            <th>Nom</th>
                            <th>Rank</th>
                            <th>Nom unique</th>
                            <th>Historique</th>
                            <th>Editer</th>
                          </tr>
                      </thead>
                      <tbody>
                          {% for currency in currencies %}
                            <tr class="odd gradeX">
                              <td>{% if currency.image is not null %}<img src="{{ asset('images/currency-logo/32/' ~ currency.image ) }}">{% endif %}</td>
                              <td>{{ currency.id }}</td>
                              <td>{{ currency.name }}</td>
                              <td>{{ currency.rank }}</td>
                              <td>{{ currency.uniqueName }}</td>
                              <td>{{ currency.history }}</td>
                              <td><a href="{{ path('admin_currencies_update',{'id': currency.id})}}">edit</td>
                            </tr>
                          {% endfor %}
                      </tbody>
                  </table>
              </div>
              <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
  </div>
{% endblock %}

{% block local_javascripts %}
  <script>
  $(document).ready(function() {
      $('#data-tables-currencies').DataTable({
          responsive: true,
          "language":{
            "url": "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
          }
      });
  });
  </script>
{% endblock %}

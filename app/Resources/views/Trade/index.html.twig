{% extends "::base.html.twig" %}

{% block title_wrapper %}
  <h1 class="page-header">Mes portefeuilles</h1>
{% endblock title_wrapper %}


{% block body %}
  <div class="row">
      <div class="col-lg-12">
          <div class="panel panel-default">
              <div class="panel-heading">
                  Liste de mes portefeuilles de trading(cliquez pour y acc√©der)
              </div>
              <!-- /.panel-heading -->
              <div class="panel-body">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-wallets">
                      <thead>
                          <tr>
                            <th>Nom</th>
                            <th>Montant</th>
                          </tr>
                      </thead>
                      <tbody>
                          {% for wallet in wallets %}
                            <tr class="odd gradeX">
                              <td><a href="{{ path('trade_show',{id:wallet.id}) }}">{{ wallet.name }}</a></td>
                              <td>{{ wallet.euroWallet.amount }}</td>
                            </tr>
                          {% endfor %}
                      </tbody>
                  </table>
              </div>
              <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
  </div>
{% endblock %}

{% block local_javascripts %}
  <script>
  $(document).ready(function() {
      $('#dataTables-wallets').DataTable({
          responsive: true,
          "language":{
            "url": "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
          }
      });
  });
  </script>
{% endblock %}

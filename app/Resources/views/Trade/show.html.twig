{% extends "::base.html.twig" %}

{% block title_wrapper %}
  <h2>Portefeuille {% if tradingWallet.public %}publique{% else %}privé{% endif %}: <b>{{ tradingWallet.name }}</b> crée le {{ tradingWallet.createdAt|date('d/m/Y') }} pour un montant initial de {{ tradingWallet.initialAmount }} €</h2>
{% endblock title_wrapper %}

{% block body %}

  <div class="row">
    <div class="col-lg-12">
        {% set owner = 0 %}
        {% if tradingWallet.user.id == app.user.id %}
          {% set owner = 1 %}
          <p>
            <a href="{{ path('trade_order_new')}}" class="btn btn-primary">Nouvel ordre</a>
          </p>
        {% endif %}
    </div>
  </div>

  <div class="row">
      <div class="col-lg-12">
          <div class="panel-body">
              <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-wallets">
                <thead>
                    <tr>
                      <th>Logo</th>
                      <th>Nom</th>
                      <th>Valeur actuelle</th>
                      <th>Solde</th>
                      <th>Valeur totale</th>
                    </tr>
                </thead>
                  <tbody>
                    {% set totalCrypto = 0 %}
                      {% for currencyWallet in tradingWallet.currencyWallets %}
                        {% set total = (currencyWallet.currency.priceEur * currencyWallet.amount) %}
                        <tr class="gradeX">
                          <td><img  src="{{ asset('images/currency-logo/32/' ~ currencyWallet.currency.image) }}" ></td>
                          <td><a href="{{ path('currency_show',{'slug': currencyWallet.currency.slug}) }}">{{ currencyWallet.currency.name }}</a></td>
                          <td>{{ currencyWallet.currency.priceEur|price }}</td>
                          <td>{{ currencyWallet.amount }}</td>
                          <td>{{ total|price }}</td>
                        </tr>
                        {% set totalCrypto = totalCrypto + total %}
                      {% endfor %}
                      <tr class="gradeX">
                          <td colspan="3"></td>
                          <td>Total crypto en €:</td>
                          <td>{{ totalCrypto|price }}</td>
                      </tr>
                      <tr class="gradeX">
                          <td colspan="3"></td>
                          <td>Total restant en €:</td>
                          <td>{{ tradingWallet.euroWallet.amount|price }}</td>
                      </tr>
                      {% set balance = totalCrypto + tradingWallet.euroWallet.amount - tradingWallet.initialAmount %}
                      <tr class="gradeX">
                          <td colspan="3"></td>
                          <td>Gain en €</td>
                          <td>
                              {% if balance == 0 %}
                                <span class="text-success">{{ balance }}</span>
                              {% elseif balance > 0 %}
                                <span class="text-navy">{{ balance|price }}</span>
                              {% else %}
                                <span class="text-danger">{{ balance|price }}</span>
                              {% endif %}
                          </td>
                      </tr>
                  </tbody>
              </table>
          </div>
      </div>
      <!-- /.col-lg-12 -->
  </div>

  <div class="row">
      <div class="col-lg-12">
          <div class="panel panel-default">
              <div class="panel-heading">
                  Historique des ordres d'achats
              </div>
              <!-- /.panel-heading -->
              <div class="panel-body">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-orders">
                      <thead>
                          <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Montant</th>
                            <th>Prix unitaire</th>
                            <th>Prix total</th>
                            <th>Status</th>
                            {% if owner %}
                              <th>Supprimer</th>
                            {% endif %}
                          </tr>
                      </thead>
                      <tbody>
                            {% for tradingOrder in tradingWallet.tradingOrders %}
                              <tr class="odd gradeX">
                                <td>{{ tradingOrder.createdAt|date('d/m/Y') }}</td>
                                <td>{{ tradingOrder.orderAction.name }}</td>
                                <td>{{ tradingOrder.amount }}</td>
                                <td>{{ tradingOrder.price|price }}</td>
                                <td>{{ tradingOrder.total|price }}</td>
                                <td>
                                  {% set order_status = tradingOrder.orderStatus.id %}
                                  {% if order_status == 1 %}
                                    <span class="label label-success">{{ tradingOrder.orderStatus.name }}</span>
                                  {% elseif order_status == 2 %}
                                    <span class="label label-warning">{{ tradingOrder.orderStatus.name }}</span>
                                  {% else %}
                                      <span class="label label-danger">{{ tradingOrder.orderStatus.name }}</span>
                                  {% endif %}
                                </td>
                                {% if owner %}
                                    {% if order_status == 2 %}
                                      <td><p class="fa fa-times-circle" style="cursor:pointer;" data-toggle="modal" data-target="#removeOrder" data-id="{{ tradingOrder.id }}"></p></td>
                                    {% else %}
                                      <td>&nbsp;</td>
                                    {% endif %}
                                {% endif %}
                              </tr>
                            {% endfor %}
                      </tbody>
                  </table>
              </div>
              <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
  </div>



  <div class="modal fade" id="removeOrder" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Suppression d'un ordre</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="" method="POST">
          <div class="modal-body">
            Etes-vous sûr de vouloir annuler votre ordre ?<br/>
            Votre ordre passera en status "Annulé"
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-primary">Confirmer</button>
          </div>
        </form>
      </div>
    </div>
  </div>

{% endblock %}


{% block local_javascripts %}
  <script type="text/javascript" src="//cdn.datatables.net/plug-ins/1.10.16/sorting/datetime-moment.js"></script>
  <script>
  $(document).ready(function() {


      $('#removeOrder').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var id = button.data('id');
        $(this).find('form').attr('action', Routing.generate('trade_order_cancel', { id: id }));
      })

      var url = "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
      $('#dataTables-orders').DataTable({
          responsive: true,
          "ordering": false,
          "lengthMenu": [ 5, 10, 15, 50, 75, 100 ],
          "pageLength": 5,
          "language":{
            "url": url
          }
      });

      $('#dataTables-wallets').DataTable({
          "responsive": true,
          "paging": false,
          "searching": false,
          "ordering": false,
          "info": false,
          "language":{
            "url": url
          }
      });
  });
  </script>
{% endblock %}

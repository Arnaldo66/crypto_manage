{% extends "::base.html.twig" %}

{% block title_wrapper %}
  <h1 class="page-header">Crée un nouveau portefeuille</h1>
{% endblock title_wrapper %}

{% block body %}
  <div class="row">
    {{ form_errors(form) }}
    <div class="col-lg-6">
      {{ form_start(form) }}

        <div class="form-group">
          <label>Libellé du portefeuille</label>
          {{ form_errors(form.name) }}
          {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_errors(form.public) }}
          <div class="radio">
            <label>
              {{ form_widget(form.public[0],{'attr':{'autocomplete':'off'}}) }}
              Public
            </label>
          </div>

          <div class="radio">
            <label>
              {{ form_widget(form.public[1],{'attr':{'autocomplete':'off'}}) }}
              Privé
            </label>
          </div>
        </div>

        <button type="submit" id="btn-create-trading" class="btn btn-default">Créer le portefeuille</button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}

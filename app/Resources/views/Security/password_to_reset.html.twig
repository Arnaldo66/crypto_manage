{% extends "::baseuser.html.twig" %}


{% block fos_user_form_title %}
    <h3 class="panel-title">Réinitialiser votre mot de passe</h3>
{% endblock fos_user_form_title %}

{% block fos_user_content %}
    {% if message|length %}{{message}}{% endif %}
    <form action="{{ path('do_reset_password', {'token': token})}}" method="post">
        <fieldset>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Nouveau mot de passe" id="password1" name="password1" required="required" minlength=8>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Répétez le mot de passe" id="password2" name="password2" required="required" minlength=8>
            </div>
        </fieldset>
        <input type="submit" id="_submit" class="btn btn-lg btn-success btn-block" name="_submit" value="Modifier le mot de passe">
    </form>
{% endblock fos_user_content %}

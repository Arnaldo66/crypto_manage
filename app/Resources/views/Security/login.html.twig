{% extends "::baseuser.html.twig" %}


{% block fos_user_form_title %}
    <h3 class="panel-title">Identifiez-vous</h3>
{% endblock fos_user_form_title %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <fieldset>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Pseudo ou email" id="username" name="_username" value="{{ last_username }}" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" id="password" name="_password" required="required">
            </div>
        </fieldset>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account"/>
        #}
        <input type="submit" id="_submit" class="btn btn-lg btn-success btn-block" name="_submit" value="Connexion">
    </form>

    <div class="pull-left user-register-login">
      <span><a href="#">Mot de passe oubli√©</a></span>
    </div>
    <div class="pull-right user-register-login">
      <span>Pas encore inscrit ? <a href="{{ path('user_registration') }}">Inscription</a></span>
    </div>

{% endblock fos_user_content %}

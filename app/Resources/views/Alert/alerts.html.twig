{% extends "::base.html.twig" %}

{% block title %}
  <title>Mes alertes - e-goldenboy.com</title>
{% endblock title %}

{% block meta %}
  <meta name="description" content="Module d'alerte du site e-goldenboy.com. Permet d'être prévenu lorsqu'une crypto-monnaie atteint le seuil que vous lui avez fixé." />
{% endblock meta %}

{% block title_wrapper %}
  <h1 class="page-header">Mes alertes en cours</h1>
{% endblock title_wrapper %}

{% block body %}
  <div class="row">
      <div class="col-lg-3 new-alert">
        <a class="btn btn-success" href="{{ path('alert_new') }}">Créer une alerte</a>
      </div>
      <div class="col-lg-12">
          <div class="panel panel-default">
              <!-- /.panel-heading -->
              <div class="panel-body">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="data-tables-alerts">
                      <thead>
                          <tr>
                            <th>id</th>
                            <th>Prix</th>
                            <th>Achat</th>
                            <th>Monnaie</th>
                          </tr>
                      </thead>
                      <tbody>
                          {% for alert in alerts %}
                            <tr class="odd gradeX">
                              <td>{{ alert.id }}</td>
                              <td>{{ alert.price|price }}</td>
                              <td>{% if alert.buy %}Achat{% else %}Vente{% endif %}</td>
                              <td>{{ alert.currency.name }}</td>
                            </tr>
                          {% endfor %}
                      </tbody>
                  </table>
              </div>
              <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
  </div>
{% endblock %}

{% block local_javascripts %}
  <script>
  $(document).ready(function() {
      $('#data-tables-alerts').DataTable({
          responsive: true,
          "language":{
            "url": "https://cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
          }
      });
  });
  </script>
{% endblock %}

{% extends "::base.html.twig" %}

{% block local_stylesheets %}
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block title %}
  <title>Créer une alerte - e-goldenboy.com</title>
{% endblock title %}


{% block title_wrapper %}
  <h2>Créer une alerte</h2>
{% endblock title_wrapper %}

{% block body %}
  <div class="row">
    <div class="col-lg-4">
      {{ form_start(form) }}

        <div class="form-group">
          <label>Type:</label>
          {% if form_errors(form.buy) %}
            <span class="error">{{ form_errors(form.buy) }}</span>
          {% endif %}
          <label class="radio-inline">
              {{ form_widget(form.buy[0],{'attr':{'autocomplete':'off'}}) }}Achat
          </label>
          <label class="radio-inline">
              {{ form_widget(form.buy[1],{'attr':{'autocomplete':'off'}}) }}Vente
          </label>
        </div>

        <div class="form-group">
          <label>Prix:</label>
          {% if form_errors(form.price) %}
            <span class="error">{{ form_errors(form.price) }}</span>
          {% endif %}
          {{ form_widget(form.price,{'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
          <label>Crypto-monnaie:</label>
          {% if form_errors(form.currency) %}
            <span class="error">{{ form_errors(form.currency) }}</span>
          {% endif %}
          {{ form_widget(form.currency,{'attr':{'class':'form-control js-select-currency'}}) }}
        </div>

        <div class="hidden">
          {{ form_widget(form.user) }}
        </div>

        {{ form_widget(form) }}
        <button type="submit" id="btn-create-contact" class="btn btn-default">Créer</button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}

{% block local_javascripts %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
  <script>
  $(document).ready(function() {
      $('.js-select-currency').select2();
  });
  </script>
{% endblock %}

{% extends "::base.html.twig" %}

{% block title %}
  <title>{{ 'article_title'|trans }}</title>
{% endblock %}

{% block meta %}
  <meta name="description" content="{{ 'article_seo_description'|trans }}" />
{% endblock meta %}

{% block title_wrapper %}
  <h2>Liste des articles</h2>
{% endblock title_wrapper %}



{% block body %}
  <div class="row">
      <div class="col-lg-12">
          <div class="panel panel-default">
              <div class="panel-heading">
                  {{ 'article_panel_title'|trans }}
              </div>
              <!-- /.panel-heading -->
              <div class="panel-body">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                          <tr>
                            <th>{{ 'article_tab_title'|trans }}</th>
                            <th>{{ 'article_tab_date'|trans }}</th>
                            <th>&nbsp;</th>
                          </tr>
                      </thead>
                      <tbody>
                          {% for article in articles %}
                            <tr>
                              <td>{{ article.title }}</td>
                              <td>{{ article.createdAt|date('d/m/Y') }}</td>
                              <td><a href="{{ path('article_show', {'slug': article.slug }) }}">{{ 'article_tab_read'|trans }}</a></td>
                            </tr>
                          {% endfor %}
                      </tbody>
                  </table>
              </div>
              <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
  </div>
{% endblock %}

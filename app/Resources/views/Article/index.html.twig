{% extends "::base.html.twig" %}

{% block title %}Liste des articles - e-goldenboy.com{% endblock %}

{% block meta %}
  <meta name="description" content="Listes complète de tous les articles de e-goldenboy.com au sujets des bitcoins, altcoins mais aussi de tout l'univers des crypto-monnaies" />
{% endblock meta %}

{% block title_wrapper %}
  <h2>Liste des articles</h2>
{% endblock title_wrapper %}



{% block body %}
  <div class="row">
      <div class="col-lg-12">
          <div class="panel panel-default">
              <div class="panel-heading">
                  Liste des tous les articles sur le bitcoin, les altcoins et le monde des crypto-monnaies
              </div>
              <!-- /.panel-heading -->
              <div class="panel-body">
                  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                          <tr>
                            <th>Titre</th>
                            <th>Création</th>
                            <th>&nbsp;</th>
                            {% if is_granted('ROLE_ADMIN') %}
                              <th>Modifier</th>
                            {% endif %}
                          </tr>
                      </thead>
                      <tbody>
                          {% for article in articles %}
                            <tr>
                              <td>{{ article.title }}</td>
                              <td>{{ article.createdAt|date('d/m/Y') }}</td>
                              <td><a href="{{ path('article_show', {'slug': article.slug }) }}">Lire</a></td>
                              {% if is_granted('ROLE_ADMIN') %}
                                <td class="text-center"><a href="{{ path('admin_update_article',{ 'id': article.id }) }}"><i class="fa fa-pencil"></i>&nbsp;</a></td>
                              {% endif %}
                            </tr>
                          {% endfor %}
                      </tbody>
                  </table>
              </div>
              <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
  </div>
{% endblock %}

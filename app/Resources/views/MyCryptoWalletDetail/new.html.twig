{% extends "::base.html.twig" %}

{% block title %}
  <title>Ajouter une crypto - e-goldenboy.com</title>
{% endblock title %}

{% block local_stylesheets %}
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block title_wrapper %}
  <h2>Ajouter une crypto Ã  votre wallet de suivi</h2>
{% endblock title_wrapper %}

{% block body %}
  <div class="row">
    <div class="col-lg-4">
      {{ form_start(form) }}

        <div class="form-group">
          <label>Montant en crypto:</label>
          {% if form_errors(form.amount) %}
            <span class="error">{{ form_errors(form.amount) }}</span>
          {% endif %}
          {{ form_widget(form.amount,{'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
          <label>Choix de la crypto:</label>
          {% if form_errors(form.currency) %}
            <span class="error">{{ form_errors(form.currency) }}</span>
          {% endif %}
          {{ form_widget(form.currency,{'attr':{'class':'form-control js-select-currency'}}) }}
        </div>

        <button type="submit" id="btn-add-crypto" class="btn btn-default">Ajouter</button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}

{% block local_javascripts %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
  <script>
  $(document).ready(function() {
      $('.js-select-currency').select2();
  });
  </script>
{% endblock %}

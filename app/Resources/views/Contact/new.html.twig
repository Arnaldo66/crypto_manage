{% extends "::base.html.twig" %}

{% block title_wrapper %}
  <h1 class="page-header">Contactez-nous</h1>
{% endblock title_wrapper %}

{% block body %}
  <div class="row">
    <div class="col-lg-4">
      {{ form_start(form) }}

        <div class="form-group">
          <label>Nom</label>
          {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
          <label>Email</label>
          {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group">
          <label>Message</label>
          {{ form_widget(form.message,{'attr':{'class':'form-control'}}) }}
        </div>

        {{ form_widget(form) }}
        <button type="submit" id="btn-create-contact" class="btn btn-default">Envoyer</button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
